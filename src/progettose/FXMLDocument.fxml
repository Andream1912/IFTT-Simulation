<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="anchorPane" prefHeight="625.0" prefWidth="912.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progettose.FXMLDocumentController">
    <children>
        <Button fx:id="addRuleButton" layoutX="66.0" layoutY="118.0" onAction="#onAddRule" text="Add Rule" />
      <Label layoutX="35.0" layoutY="21.0" text="IFTTT">
         <font>
            <Font name="System Bold" size="41.0" />
         </font>
      </Label>
      <Button fx:id="removeRuleButton" layoutX="56.0" layoutY="167.0" mnemonicParsing="false" onAction="#onRemoveRule" text="Remove Rule" />
      <Label layoutX="559.0" layoutY="61.0" text="Rules">
         <font>
            <Font size="27.0" />
         </font>
      </Label>
      <Button fx:id="toggleStateButton" layoutX="50.0" layoutY="213.0" mnemonicParsing="false" onAction="#onToggleState" text="Deactivate Rule" />
      <TableView fx:id="tableView" layoutX="324.0" layoutY="100.0" prefHeight="400.0" prefWidth="533.0">
        <columns>
          <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="actionColumn" prefWidth="75.0" text="Action" />
            <TableColumn fx:id="triggerColumn" prefWidth="75.0" text="Trigger" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
    </children>
</AnchorPane>
